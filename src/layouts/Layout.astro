---
import Footer from '@components/footer/Footer.svelte';
import MainSponsors from '@components/footer/MainSponsors.astro';
import Navbar from '@components/Navbar.svelte';

import '../styles/global.css';
import MeltPortalled from './MeltPortalled.svelte';
import NewsletterDialog from './NewsletterDialog.svelte';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>

    <link href="/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180" />
    <link href="/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png" />
    <link href="/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png" />
    <link href="/favicon.png" rel="icon" />
    <link href="/favicon.ico" rel="icon" sizes="32x32" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <link href="/site.webmanifest" rel="manifest" />
    <link color="#5bbad5" href="/safari-pinned-tab.svg" rel="mask-icon" />
    <meta content="#da532c" name="msapplication-TileColor" />
    <meta content="#ffffff" name="theme-color" />
    <meta content="width=device-width" name="viewport" />
  </head>

  <body class="bg-background">
    <MeltPortalled client:load>
      <Navbar client:load currentPage={Astro.url.pathname} />
      <main>
        <slot />
      </main>

      <MainSponsors />
      <Footer client:load />

      <NewsletterDialog client:load />
    </MeltPortalled>
  </body>
</html>

<style is:global>
  /* Montserrat */

  /* latin-ext */
  @font-face {
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url(/fonts/Montserrat/Montserrat-Latin-ext.woff2) format('woff2');
    unicode-range:
      U+0100-02AF, U+0304, U+0308, U+0329, U+1E00-1E9F, U+1EF2-1EFF, U+2020, U+20A0-20AB,
      U+20AD-20CF, U+2113, U+2C60-2C7F, U+A720-A7FF;
  }
  /* latin */
  @font-face {
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url(/fonts/Montserrat/Montserrat-Latin.woff2) format('woff2');
    unicode-range:
      U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329,
      U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  /* Source Serif Pro */
  @font-face {
    font-family: 'source-serif-pro';
    src: url(/fonts/source-serif-pro/source-serif-pro-400-regular.woff2) format('woff2');
    font-display: auto;
    font-style: normal;
    font-weight: 400;
    font-stretch: normal;
  }

  @font-face {
    font-family: 'source-serif-pro';
    src: url(/fonts/source-serif-pro/source-serif-pro-700-regular.woff2) format('woff2');
    font-display: auto;
    font-style: normal;
    font-weight: 700;
    font-stretch: normal;
  }

  @font-face {
    font-family: 'source-serif-pro';
    src: url(/fonts/source-serif-pro/source-serif-pro-400-italic.woff2) format('woff2');
    font-display: auto;
    font-style: italic;
    font-weight: 400;
    font-stretch: normal;
  }

  @font-face {
    font-family: 'source-serif-pro';
    src: url(/fonts/source-serif-pro/source-serif-pro-700-italic.woff2) format('woff2');
    font-display: auto;
    font-style: italic;
    font-weight: 700;
    font-stretch: normal;
  }
</style>
